<div class="js-image-tags-and-actions row">
  <span class="js-tags-list col-10 justify-content-start">
    <%= render partial: 'shared/tag_cloud', locals: { tag_list: image.tag_list } %>
  </span>
  <span class="js-card-btn-group btn-group col-2 justify-content-end" role="group">
    <span data-toggle="tooltip" title="Share image">
      <button type="button" class="btn btn-outline-dark btn-sm ml-1" data-toggle="modal" data-target="#image-shares-modal" data-image-url=<%= image.imageurl %> data-action=<%= image_image_shares_path(image) %> title="Share image" >
        <i class="fa fa-share-square-o"></i>
      </button>
    </span>
    <%= button_to image_path(image),
                  method: :delete,
                  data: { confirm: 'Are you sure you want to delete this image?' },
                  class: "js-btn-delete btn btn-outline-dark btn-sm",
                  'data-toggle': 'tooltip',
                  title: "Delete image" do %>
      <i class="fa fa-trash-o"></i>
    <% end %>
  </span>
</div>
