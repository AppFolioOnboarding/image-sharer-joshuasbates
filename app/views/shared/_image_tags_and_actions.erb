<div class="js-image-tags-and-actions row bg-faded py-2">
  <span class="js-tags-list col-10 justify-content-start">
    <% image.tag_list.each do |tag| %>
      <%= link_to(tag, "#{images_path}?tag_name=#{tag}", :class=>"js-card-tag badge badge-default") %>
    <% end %>
  </span>
  <span class="js-card-btn-group btn-group col-2 justify-content-end" role="group">
    <%= button_to new_image_image_share_path(image),
                  method: :get,
                  class: "js-btn-delete btn btn-secondary btn-sm",
                  'data-toggle': 'tooltip',
                  title: "Share image" do %>
      <i class="fa fa-share-square-o"></i>
    <% end %>
    <%= button_to image_path(image),
                  method: :delete,
                  data: { confirm: 'Are you sure you want to delete this image?' },
                  class: "js-btn-delete btn btn-secondary btn-sm",
                  'data-toggle': 'tooltip',
                  title: "Delete image" do %>
      <i class="fa fa-trash-o"></i>
    <% end %>
  </span>
</div>
